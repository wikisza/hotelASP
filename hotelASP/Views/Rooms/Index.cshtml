@model IEnumerable<hotelASP.Models.Room>

@{
	ViewData["Title"] = "Pokoje";
}

<a asp-controller="Rooms" asp-action="Create"> Dodaj pokój </a>

<div class="roomsTable">
	<table class="table">
		<thead>
			<tr>
				<th>
					Numer pokoju
				</th>
				<th>
					Opis pokoju
				</th>
				<th>
					Cena
				</th>
				<th>
					Czy zajęty
				</th>
				<th>Opcje</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id_room)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Description)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@{
							if (item.Is_taken == 0)
							{
								<span style="color:green;">Wolny</span>
							}
							else
							{
								<span style="color:red;">Zajęty</span>
							}
						}
					</td>

					<td>
						<a asp-action="Edit" asp-route-id="@item.Id_room">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.Id_room">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.Id_room">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
